<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vcashorg.vcashwallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".VcashApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".LauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".VcashStartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VcashValidateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WalletCreateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MnemonicCreateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MnemonicConfirmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VcashSendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VcashReceiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".widget.qrcode.ScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TxDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MnemonicRestoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LockScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PasswordVerifyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WalletMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReceiveTxFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReceiveTxFileCopyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReceiveTxFileRecordActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".RecoverPhraseActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>