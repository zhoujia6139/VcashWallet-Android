<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_face"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:src="@drawable/ic_vcash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/create_wallet"
            android:background="@drawable/selector_home_create"
            android:layout_width="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_height="50dp">
            <TextView
                android:layout_gravity="center"
                android:text="Create new wallet"
                android:textColor="@color/white"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_add_white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_home_restore"
            android:layout_width="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginBottom="65dp"
            android:layout_height="50dp">
            <TextView
                android:layout_gravity="center"
                android:text="Restore from paper key"
                android:textColor="@color/white"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_restore_white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>