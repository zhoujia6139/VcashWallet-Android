<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_tx_bg"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/selector_shadow"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/iv_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_tx_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/ll_right"
        android:layout_toRightOf="@+id/iv_tx"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tx_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxWidth="160dp"
            android:singleLine="true"
            android:textColor="@color/A10"
            tools:text="s8dss8dse....2e6a202s8dse2e6a2022e6a202" />

        <TextView
            android:id="@+id/tv_tx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/A2"
            android:textSize="12sp"
            tools:text="2018-05-15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tx_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/A10"
                tools:text="3.156111111" />

            <TextView
                android:id="@+id/v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="V"
                android:textColor="@color/A2" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_tx_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/ic_tx_confirmed"
            android:drawablePadding="4dp"
            android:textColor="@color/A2"
            android:textSize="12sp"
            tools:text="Confirmed" />
    </LinearLayout>
</RelativeLayout>