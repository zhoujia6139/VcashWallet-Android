<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="4dp"
    android:id="@+id/rl_tx_bg"
    android:background="@drawable/selector_shadow">

    <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:background="@color/grey_4"-->
        <!--android:layout_height="match_parent"/>-->

    <ImageView
        android:layout_marginLeft="12dp"
        android:id="@+id/iv_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_tx_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/iv_tx"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s8dse....2e6a202"
            android:textColor="@color/A10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2018-05-15"
            android:textColor="@color/A2"
            android:textSize="12sp" />
    </LinearLayout>

    <!--<View-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_width="1dp"-->
        <!--android:background="@color/grey_4"-->
        <!--android:layout_height="match_parent"/>-->

    <LinearLayout
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.01223156"
                android:textColor="@color/A10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="V"
                android:textColor="@color/A2" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_tx_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/ic_tx_confirmed"
            android:drawablePadding="4dp"
            android:text="Confirmed"
            android:textColor="@color/A2"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>